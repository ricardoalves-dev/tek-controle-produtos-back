generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id Int @id @default(autoincrement())
  descricao String @db.VarChar(30) @unique
  produtos Produto[]
}

model Produto {
  id Int @id @default(autoincrement())
  nome String @db.VarChar(30) @unique
  descricao String? @db.VarChar(100)
  preco Decimal @db.Money
  imagem String? @db.VarChar(100)
  categoria Categoria @relation(fields: [categoriaProduto], references: [id])
  categoriaProduto Int
}